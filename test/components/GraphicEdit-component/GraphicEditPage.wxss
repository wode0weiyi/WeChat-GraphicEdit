
page{
  width: 100%;
  height: 100%;
}

.GraphicEditPageBgView{
  display: flex;
  /* height: 100%; */
  flex-direction: column;
  background-color: #fff;
}
/* 分割线 */
.graphicLine{
  display: flex;
  background-color: #d8d8d8;
  height: 2rpx;
  width: 750rpx;
}
/* 内容view */
.contentView{
  display: flex;
  /* width: 100%; */
  margin: 30rpx;
  flex-direction: column
}
/* 输入框 */
.area{
  color: #333;
  width: 100%;
  font-size: 16px;
  margin-bottom: 50rpx;
  line-height: 20px;
  height: 914rpx;
}
/* 图片view */
.imgView{
  display: flex;
  margin-bottom: 50rpx;
  width: 100%;
  position: relative;
  border: 2rpx #d8d8d8 solid;  
}
/* 删除图片按钮 */
.deleteImg{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
/* 上传失败imgView */
.img-field-view{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 500rpx;
  align-items: center;
  justify-content: center;
}
/* 图片上传失败默认图 */
.img-field-view image{
  width: 128rpx;
  height: 138rpx;
}
/* 图片上传失败提示text */
.img-field-view text{
  color: #999;
  font-size: 30rpx;
}

/* image */
.img{
  width: 100%;
}
/* 添加图片按钮 */
.takePhoto{
  /* display: flex; */
  position: fixed;
  bottom: 250rpx;
  width: 150rpx;
  height: 150rpx;
  right: 30rpx;
}
/* 提交按钮 */
.submitBtn{
  color: #fff;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 45rpx;
  height: 90rpx;
  width: 690rpx;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
  /* background-color: #FF726F */
}